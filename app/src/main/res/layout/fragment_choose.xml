<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChooseFragment"
        android:orientation="vertical">

        <Button
            android:id="@+id/android_doc_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AndroidDocSample" />

        <Button
            android:id="@+id/hello_triangle_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HelloTriangle" />

        <Button
            android:id="@+id/texture_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texture" />

        <Button
            android:id="@+id/transform_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transform" />

        <Button
            android:id="@+id/lighting_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lighting" />

    </LinearLayout>
</layout>